<?xml version="1.0" encoding="utf-8"?>

<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#ffffff"
    tools:context=".MainActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffff">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:id="@+id/top_name"
            android:elevation="1dp"
            android:text="@string/app_name"
            android:textColor="#ffffff"
            android:layout_marginTop="10dp"
            android:textSize="25sp"
            android:textStyle="bold" />

        <View
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:background="#283DC8" />

        <EditText
            android:layout_below="@+id/top_name"
            android:id="@+id/search"
            android:layout_width="249dp"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_marginStart="20dp"
            android:layout_marginTop="25dp"
            android:layout_marginEnd="2dp"
            android:layout_marginBottom="15dp"
            android:layout_toStartOf="@+id/testbtn"
            android:layout_weight="10"
            android:background="#ffffff"
            android:hint="Search here"
            android:iconifiedByDefault="false"
            android:maxWidth="1dp"
            android:maxLength="28"
            android:maxLines="1"
            android:padding="5dp" />

        <Button
            android:id="@+id/testbtn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"

            android:layout_below="@+id/top_name"
            android:layout_marginTop="19dp"
            android:layout_marginEnd="10dp"
            android:layout_marginBottom="15dp"
            android:layout_weight="1"
            android:text="SEARCH" />

        <androidx.cardview.widget.CardView
            android:id="@+id/top_card"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/search"
            android:layout_marginLeft="25dp"
            android:layout_marginTop="20dp"
            android:layout_marginRight="25dp"
            app:cardCornerRadius="20dp"
            tools:layout_editor_absoluteX="1dp"
            tools:layout_editor_absoluteY="329dp">

            <ImageView
                android:id="@+id/top_img"
                android:layout_width="match_parent"
                android:layout_height="350dp"
                android:onClick="randomfun"
                android:scaleType="centerCrop" />

            <TextView
                android:id="@+id/top_txt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="45dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="Top Suggestions"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

            <TextView
                android:id="@+id/top_txt2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:fontFamily="sans-serif-smallcaps"
                android:text="For You"
                android:textColor="#ffffff"
                android:textSize="30sp"
                android:textStyle="bold" />

        </androidx.cardview.widget.CardView>

        <TextView
            android:id="@+id/catogries"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/top_card"
            android:layout_marginLeft="22dp"
            android:layout_marginTop="25dp"
            android:fontFamily="sans-serif-smallcaps"
            android:gravity="center"
            android:paddingBottom="10dp"
            android:text=": Categories :"
            android:textColor="#000000"
            android:textSize="30sp" />

        <androidx.recyclerview.widget.RecyclerView

            android:id="@+id/category_recycler"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/catogries"
            android:layout_alignParentBottom="true"
            android:layout_marginStart="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="-10dp"
            android:orientation="horizontal" />


    </RelativeLayout>
</ScrollView>
